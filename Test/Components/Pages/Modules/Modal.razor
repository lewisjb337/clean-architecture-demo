﻿<div class="modal @_modalClass" tabindex="-1" role="dialog" style="display: @_modalDisplay">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">@Title</div>
            <div class="modal-body">
                @BodyContent
            </div>
            <div class="modal-footer">
                <button class="btn @ButtonColor" disabled="@_isDisabled" data-dismiss="modal" @onclick="OnAction">@ActionName</button>
                <button class="btn btn-secondary" disabled="@_isDisabled" data-dismiss="modal" @onclick="Close">Close</button>
            </div>
        </div>
    </div>
</div>

@if (_showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}